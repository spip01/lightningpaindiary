{
  "database": {
    "rules": "database-rules.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "firestore": {
    "rules": "firestore.rules"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/functions/**",
      "database-rules.json",
      "storage.rules"
    ],
    "headers": [{
        "source": "**/*",
        "headers": [{
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        }]
      },
      {
        "source": "**/*.@(jpg|jpeg|gif|png)",
        "headers": [{
          "key": "Cache-Control",
          "value": "max-age=7200"
        }]
      }
    ]
  }
}